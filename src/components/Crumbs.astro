---
import { Breadcrumbs } from "astro-breadcrumbs";

import 'astro-breadcrumbs/breadcrumbs.css';
const { crumbs } = Astro.props;
---

<div class="crumbs">
	<h2><Breadcrumbs indexText="Home" crumbs={crumbs} /></h2>
</div>

<style lang="scss">
	.crumbs {
		max-width: 50vw;
		margin-left: 10px;
		padding: 0 10px;
		display: flex;
		align-items: center;

		animation: mount ease-out var(--nav-anim-duration);
	}
</style>
