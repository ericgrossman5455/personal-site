---
const {
	id = 'lorem-ipsum',
	copyEyebrow = 'Lorem Ipsum',
	copyHeadline = 'Lorem Ipsum',
	imageAlt = 'Lorem Ipsum.',
	imageLoading = 'lazy',
} = Astro.props;
---

<div class=`${id}-uxb-wrapper` id={id}>
	<div class=`${id}-uxb-glow`></div>
	<img
		class=`${id}-uxb-image`
		alt={imageAlt}
		src=`./assets/${id}/${id}-product-shot.png`
		loading={imageLoading}
	/>
	<div class=`${id}-uxb-copy`>
		<h3>{copyEyebrow}</h3>
		<h2>{copyHeadline}</h2>
		<p>
			<slot />
		</p>
	</div>
</div>

<style lang="scss">

	.mobell-uxb-wrapper {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: auto;
		margin: 23vh auto;
		max-width: 100em;
		max-height: 100em;
		min-height: 40em;
		column-gap: 5%;
	}

	.mobell-uxb-glow {
		align-self: center;
		grid-column: 1/3;
		grid-row: 1;
		width: 30em;
		height: 30em;
		background: radial-gradient(
			ellipse closest-side,
			rgb(248, 161, 0) 0%,
			rgba(248, 181, 0, 0.1) 70%,
			rgba(248, 181, 0, 0) 100%
		);
		transform: scale(2) translateX(2em);
		opacity: 0.5;
		transition: ease 1s;
	}

	.mobell-uxb-image {
		grid-row: 1;
		grid-column: 1/3;
		transform: scale(1.3);
		transform-origin: right;
		transition: ease 1s;
	}

	.mobell-uxb-copy {
		grid-column: 3/5;
		grid-row: 1;
		margin-right: 4em;
		align-self: center;
		z-index: 1;
		max-width: 40em;
		transition: ease 1s;
	}

	.mobell-uxb-wrapper:hover .mobell-uxb-glow {
		transform: scale(2.7) translateX(2em);
	}

	.mobell-uxb-wrapper:hover .mobell-uxb-image {
		transform: scale(1.3) translateX(0.3em);
	}

	.mobell-uxb-wrapper:hover .mobell-uxb-copy {
		transform: translateX(-0.3em);
	}

	@media only screen and (max-width: 70em) {
		.mobell-uxb-wrapper {
			column-gap: 0;
		}

		.mobell-uxb-glow {
			transform: scale(1.7) translateX(-2em);
		}

		.mobell-uxb-image {
			transform: scale(1.3) translateX(-2em);
		}

		.mobell-uxb-copy {
			margin-right: 3em;
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-glow {
			transform: scale(1.7) translateX(-2em);
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-image {
			transform: scale(1.3) translateX(-2em);
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-copy {
			transform: translateX(0);
		}
	}

	@media only screen and (max-width: 50em) {
		.mobell-uxb-wrapper {
			margin: 0 auto 10vh;
			grid-template-rows: 31em auto;
		}

		.mobell-uxb-glow {
			grid-column: 1/-1;
			transform: scale(1.5) translateX(-1em);
			width: auto;
			height: 25em;
			margin-bottom: -10em;
		}

		.mobell-uxb-image {
			transform: scale(1.5) translateX(-1em);
			transform-origin: top;
			grid-column: 1/-1;
			width: auto;
			height: 60vh;
			min-height: 25em;
			max-height: 28em;
			margin: 5em auto -5em;
		}

		.mobell-uxb-copy {
			padding: 3em 2em 0;
			grid-column: 1/-1;
			grid-row: 2;
			margin: 0;
			max-width: none;
			background: linear-gradient(
				0deg,
				var(--bg-layer-base) 0%,
				var(--bg-layer-base) 80%,
				rgba(33, 32, 36, 0.8) 90%,
				rgba(33, 32, 36, 0.5) 94%,
				rgba(33, 32, 36, 0.3) 96%,
				rgba(33, 32, 36, 0) 100%
			);
		}

		.mobell-uxb-copy p,
		.mobell-uxb-copy h2 {
			max-width: 550px;
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-glow {
			transform: scale(1.5) translateX(-1em);
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-image {
			transform: scale(1.5) translateX(-1em);
		}

		.mobell-uxb-wrapper:hover .mobell-uxb-copy {
			transform: translateX(0);
		}

		@media (prefers-color-scheme: light) {
			.mobell-uxb-copy {
				background: linear-gradient(
					0deg,
					var(--bg-layer-base) 0%,
					var(--bg-layer-base) 80%,
					rgba(225, 225, 225, 0.8) 90%,
					rgba(225, 225, 225, 0.5) 94%,
					rgba(225, 225, 225, 0.3) 96%,
					rgba(225, 225, 225, 0) 100%
				);
			}
		}
	}

