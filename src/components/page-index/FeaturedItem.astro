			margin: -7vh auto 10vh;
			grid-template-rows: 33em auto;
		}

		.boltabout-uxb-glow {
			grid-column: 1/-1;
			transform: scale(1.5) translateX(2em);
			width: auto;
			height: 25em;
			margin-bottom: -10em;
		}

		.boltabout-uxb-image {
			transform: scale(1.5) translateX(4em) translateY(1em);
			transform-origin: top;
			grid-column: 1/-1;
			width: auto;
			height: 50vh;
			min-height: 25em;
			max-height: 30em;
			margin: 5em auto 2em;
		}

		.boltabout-uxb-copy {
			padding: 3em 2em 0;
			grid-column: 1/-1;
			grid-row: 2;
			margin: 0;
			max-width: none;
			background: linear-gradient(
				0deg,
				var(--bg-layer-base) 0%,
				var(--bg-layer-base) 80%,
				rgba(33, 32, 36, 0.8) 90%,
				rgba(33, 32, 36, 0.5) 94%,
				rgba(33, 32, 36, 0.3) 96%,
				rgba(33, 32, 36, 0) 100%
			);
		}

		.boltabout-uxb-copy p,
		.boltabout-uxb-copy h2 {
			max-width: 550px;
		}

		.boltabout-uxb-wrapper:hover .boltabout-uxb-glow {
			transform: scale(1.5) translateX(2em);
		}

		.boltabout-uxb-wrapper:hover .boltabout-uxb-image {
			transform: scale(1.5) translateX(4em) translateY(1em);
		}

		.boltabout-uxb-wrapper:hover .boltabout-uxb-copy {
			transform: translateX(0);
		}

		@media (prefers-color-scheme: light) {
			.boltabout-uxb-copy {
				background: linear-gradient(
					0deg,
					var(--bg-layer-base) 0%,
					var(--bg-layer-base) 80%,
					rgba(225, 225, 225, 0.8) 90%,
					rgba(225, 225, 225, 0.5) 94%,
					rgba(225, 225, 225, 0.3) 96%,
					rgba(225, 225, 225, 0) 100%
				);
			}
		}
	}

	/*--------------*/

	.cp-events-uxb-wrapper {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		grid-template-rows: auto;
		margin: 21vh auto 0;
		max-width: 100em;
		max-height: 100em;
		min-height: 40em;
		column-gap: 5%;
	}

	.cp-events-uxb-glow {
		align-self: center;
		grid-column: 1/3;
		grid-row: 1;
		margin: 0 auto;
		width: 20em;
		height: 30em;
		background: radial-gradient(
			ellipse closest-side,
			rgb(21, 71, 52) 0%,
			rgba(21, 71, 52, 0.1) 90%,
			rgba(21, 71, 52, 0) 100%
		);
		transform: scale(1.5) translateX(1em) translateY(-2em) rotate(12deg);
		opacity: 1;
		transition: ease 1s;
	}

	@media (prefers-color-scheme: light) {
		.cp-events-uxb-glow {
			background: radial-gradient(
				ellipse closest-side,
				rgb(32, 124, 89) 0%,
				rgba(33, 118, 85, 0.066) 90%,
				rgba(42, 168, 120, 0) 100%
			);
		}
	}

	.cp-events-uxb-image {
		grid-row: 1;
		grid-column: 1/3;
		transform: scale(1.1);
		transform-origin: center;
		transition: ease 1s;
	}

	.cp-events-uxb-copy {
		grid-column: 3/5;
		grid-row: 1;
		margin-right: 4em;
		align-self: center;
