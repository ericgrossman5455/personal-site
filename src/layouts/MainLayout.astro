---
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

const { title = 'Lorem Ipsum', description = 'Lorem Ipsum' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<!-- prettier-ignore -->
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="stylesheet" type="text/css" href="/styles/global-reset.css">
		<link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
		<link rel="manifest" href="/favicons/site.webmanifest">
		<link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#212024">
		<link rel="shortcut icon" href="/favicons/favicon.ico">
		<meta name="apple-mobile-web-app-title" content="Eric Grossman">
		<meta name="application-name" content="Eric Grossman">
		<meta name="msapplication-TileColor" content="#212024">
		<meta name="msapplication-config" content="/favicons/browserconfig.xml">
		<meta name="theme-color" media="(prefers-color-scheme: light)" content="#DEDEDE">
		<meta name="theme-color" media="(prefers-color-scheme: dark)" content="#212024">
		<meta name="color-scheme" content="light dark">
		<meta name="generator" content={Astro.generator} />

		<meta name="author" content="Eric Grossman">
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>

	<body>
		<main>
			<Nav />
			<slot>LOREM IPSUM</slot>
			<Footer />
		</main>
	</body>
</html>

<style is:global lang="scss">

:root {
	$bg-layer-base: #DEDEDE;
	$glyph-standard: #4B4B4B;
	background-color: $bg-layer-base;
	color: $glyph-standard;

	scroll-behavior: smooth;
	color-scheme: light dark;
	font-family: sans-serif;

	@media (prefers-color-scheme: dark) {
		$bg-layer-base: #212024;
		$glyph-standard: #E1E1E1;
		background-color: $bg-layer-base;
		color: $glyph-standard;
	}
}

main {
	display: grid;
	grid-template-columns: 85px 1fr;
	grid-template-rows: 1fr auto;
	grid-template-areas:
	"nav content"
	"nav footer";
}

</style>


